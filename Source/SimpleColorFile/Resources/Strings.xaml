<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- User Interface Strings -->
    <system:String x:Key="ColorTextBoxDefaultText">OrangeRed</system:String>
    <system:String x:Key="ColorTextBoxTooltip">Type a hexadecimal color code, or a color name</system:String>
    <system:String x:Key="PickColorLinkButtonContent">_Pick color</system:String>
    <system:String x:Key="SaveButtonContent">_Save</system:String>
    <system:String x:Key="SaveFileDialogDefaultExt">.html</system:String>
    <system:String x:Key="SaveFileDialogFilter">Simple Color Files (.html)|*.html</system:String>
    <system:String x:Key="ColorSavedToast">Color saved</system:String>

    <!-- Main functionality template strings -->
    <system:String x:Key="fileNameTemplate">Color{0}.html</system:String>
    <system:String x:Key="fileContentTemplate" xml:space="preserve">&lt;html&gt;
    &lt;head&gt;
        &lt;title&gt;Color {0}&lt;/title&gt;
    &lt;/head&gt;
    &lt;body style=&quot;background: {0}&quot;&gt;
    &lt;/body&gt;
&lt;/html&gt;
    </system:String>

</ResourceDictionary>